<UserControl x:Class="NetQueryBuilder.WPF.Controls.SimpleConditionEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="clr-namespace:NetQueryBuilder.WPF.Controls.UI">
    <Border BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Padding="12" CornerRadius="4" Margin="0,4">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Delete Button -->
            <Button Grid.Column="0"
                    Command="{Binding DeleteCommand}"
                    ToolTip="Delete Condition"
                    Width="32" Height="32"
                    Margin="0,0,12,0"
                    Style="{StaticResource IconButtonStyle}">
                <Path Data="M6 19C6 20.1 6.9 21 8 21H16C17.1 21 18 20.1 18 19V7H6V19ZM19 4H15.5L14.5 3H9.5L8.5 4H5V6H19V4Z"
                      Fill="#F44336"
                      Stretch="Uniform"
                      Width="16" Height="16"/>
            </Button>

            <!-- Property Selector -->
            <ui:PropertySelector Grid.Column="1"
                                Properties="{Binding AvailableProperties}"
                                SelectedProperty="{Binding SelectedProperty, Mode=TwoWay}"
                                Margin="0,0,12,0"/>

            <!-- Operator Selector -->
            <ui:OperatorSelector Grid.Column="2"
                                Operators="{Binding AvailableOperators}"
                                SelectedOperator="{Binding SelectedOperator, Mode=TwoWay}"
                                Margin="0,0,12,0"/>

            <!-- Value Input -->
            <ui:TypedValueInput Grid.Column="3"
                               PropertyType="{Binding PropertyType}"
                               Value="{Binding Value, Mode=TwoWay}"/>
        </Grid>
    </Border>
</UserControl>

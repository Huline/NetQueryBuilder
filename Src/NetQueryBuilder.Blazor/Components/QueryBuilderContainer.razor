@using NetQueryBuilder.Configurations
@inject IQueryConfigurator QueryConfigurator

<div class="nqb-stack">
    <div class="nqb-grid">
        <div class="nqb-item nqb-xs-4">
            <button class="nqb-button nqb-button-outlined nqb-button-primary" @onclick="NewQuery">New Query</button>
        </div>
        <div class="nqb-item nqb-xs-8">
            <div class="nqb-row-stack">
                <h5 class="nqb-text nqb-heading">FROM</h5>
                <NetQueryBuilder.Blazor.Components.FormControls.Select TItem="Type"
                                                                       Label="Entity"
                                                                       Items="_entities"
                                                                       Value="_selectedEntityType"
                                                                       ToStringFunc="type => type.Name"
                                                                       ValueChanged="e => OnEntitySelect(e)">
                </NetQueryBuilder.Blazor.Components.FormControls.Select>
            </div>
        </div>
    </div>
    <div @key="_queryBuilderKey">
        @CreateQueryBuilder()
    </div>
</div>

<style>
    .nqb-stack {
        display: flex;
        flex-direction: column;
        gap: 1.25rem;
    }

    .nqb-grid {
        display: flex;
        flex-wrap: wrap;
        margin: -0.75rem;
    }

    .nqb-item {
        padding: 0.75rem;
        box-sizing: border-box;
    }

    .nqb-xs-4 {
        flex: 0 0 33.333333%;
        max-width: 33.333333%;
    }

    .nqb-xs-8 {
        flex: 0 0 66.666667%;
        max-width: 66.666667%;
    }

    .nqb-row-stack {
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 1rem;
    }

    .nqb-text {
        margin: auto;
        vertical-align: center;
    }

    .nqb-heading {
        font-size: 1.25rem;
        font-weight: 500;
        margin: 0;
    }

    .nqb-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-size: 0.875rem;
        cursor: pointer;
        transition: background-color 0.2s, box-shadow 0.2s;
        border: none;
        font-weight: 500;
        margin: auto;
        vertical-align: center;
    }

    .nqb-button-outlined {
        background-color: transparent;
        border: 1px solid;
    }

    .nqb-button-primary {
        color: #1e88e5;
        border-color: #1e88e5;
    }

    .nqb-button-primary:hover {
        background-color: rgba(30, 136, 229, 0.04);
    }
</style>
@using System.Linq.Expressions
@using NetQueryBuilder.Blazor.Components.FormControls
@typeparam T

<div class="nqb-paper nqb-list-container">
    <h4 class="nqb-subtitle">Valeurs de la liste</h4>
    <div class="nqb-button-group">
        <button class="nqb-button nqb-button-primary" @onclick="OpenDialog">
            <span class="nqb-button-icon">+</span>
            Ajouter une valeur
        </button>
    </div>

    <ChipSet TItem="T"
             Items="Items"
             OnClose="RemoveListItem"/>
</div>

<ModalDialog IsVisible="_showListItemDialog"
             IsVisibleChanged="v => _showListItemDialog = v"
             ShowCloseButton="true">
    <TitleContent>
        <span>Ajouter une valeur</span>
    </TitleContent>
    <ChildContent>
        @if (typeof(T) == typeof(string))
        {
            <TextField Label="Valeur"
                       Value="@_stringInputValue"
                       ValueChanged="UpdateStringValue"/>
        }
        else if (typeof(T) == typeof(int))
        {
            <NumericField TValue="int"
                          Label="Valeur"
                          Value="@_intInputValue"
                          ValueChanged="UpdateIntValue"/>
        }
    </ChildContent>
    <ActionContent>
        <button class="nqb-button nqb-button-text" @onclick="@(() => _showListItemDialog = false)">
            Annuler
        </button>
        <button class="nqb-button nqb-button-primary" @onclick="AddListItem">
            Ajouter
        </button>
    </ActionContent>
</ModalDialog>

<style>
    .nqb-paper {
        background-color: white;
        border-radius: 4px;
        border: 1px solid #d0d0d0;
        margin-bottom: 1rem;
    }

    .nqb-list-container {
        padding: 1rem;
    }

    .nqb-subtitle {
        font-size: 1rem;
        font-weight: 500;
        margin-top: 0;
        margin-bottom: 0.75rem;
        color: #424242;
    }

    .nqb-button-group {
        display: flex;
        margin-bottom: 1rem;
    }

    .nqb-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-size: 0.875rem;
        cursor: pointer;
        transition: background-color 0.2s, border-color 0.2s;
        border: 1px solid transparent;
        background-color: transparent;
    }

    .nqb-button-primary {
        background-color: #1e88e5;
        color: white;
        border-color: #1e88e5;
    }

    .nqb-button-primary:hover {
        background-color: #1976d2;
        border-color: #1976d2;
    }

    .nqb-button-text {
        color: #616161;
    }

    .nqb-button-text:hover {
        background-color: rgba(0, 0, 0, 0.04);
    }

    .nqb-button-icon {
        margin-right: 0.5rem;
        font-weight: bold;
    }

    /* Styles pour le mode sombre si nécessaire */
    :root[data-theme="dark"] .nqb-paper {
        background-color: #303030;
        border-color: #424242;
    }

    :root[data-theme="dark"] .nqb-subtitle {
        color: #e0e0e0;
    }

    :root[data-theme="dark"] .nqb-button-text {
        color: #e0e0e0;
    }

    :root[data-theme="dark"] .nqb-button-text:hover {
        background-color: rgba(255, 255, 255, 0.08);
    }
</style>


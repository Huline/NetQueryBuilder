<div class="nqb-switch-container">
    <label class="nqb-switch">
        <input type="checkbox" checked="@Value" @onchange="OnValueChanged" disabled="@Disabled" />
        <span class="nqb-slider"></span>
    </label>
    @if (!string.IsNullOrEmpty(Label))
    {
        <span class="nqb-switch-label">@Label</span>
    }
</div>

<style>
    .nqb-switch-container {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
    }

    .nqb-switch {
        position: relative;
        display: inline-block;
        width: 3.5rem;
        height: 1.75rem;
        margin-right: 0.75rem;
    }

    .nqb-switch input {
        opacity: 0;
        width: 0;
        height: 0;
    }

    .nqb-slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        transition: .3s;
        border-radius: 2rem;
    }

    .nqb-slider:before {
        position: absolute;
        content: "";
        height: 1.25rem;
        width: 1.25rem;
        left: 0.25rem;
        bottom: 0.25rem;
        background-color: white;
        transition: .3s;
        border-radius: 50%;
    }

    input:checked + .nqb-slider {
        background-color: #1e88e5;
    }

    input:focus + .nqb-slider {
        box-shadow: 0 0 1px #1e88e5;
    }

    input:checked + .nqb-slider:before {
        transform: translateX(1.75rem);
    }

    input:disabled + .nqb-slider {
        opacity: 0.5;
        cursor: not-allowed;
    }

    .nqb-switch-label {
        font-size: 0.875rem;
        color: #424242;
    }

    /* Styles pour le mode sombre si nécessaire */
    :root[data-theme="dark"] .nqb-slider {
        background-color: #555;
    }

    :root[data-theme="dark"] .nqb-switch-label {
        color: #e0e0e0;
    }
</style>
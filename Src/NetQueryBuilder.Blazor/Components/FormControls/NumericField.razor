@typeparam TValue where TValue : struct, IFormattable

<div class="nqb-input-container">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="nqb-input-label">@Label</label>
    }
    <div class="nqb-input-wrapper">
        <input type="number" 
               class="nqb-input" 
               value="@Value" 
               @onchange="OnValueChanged" 
               @onkeydown="OnKeyDown" 
               step="@Step" 
               min="@Min" 
               max="@Max" />
        
        @if (!string.IsNullOrEmpty(AdornmentIcon))
        {
            <div class="nqb-input-adornment">
                <span class="nqb-icon">@AdornmentIcon</span>
            </div>
        }
    </div>
    @if (!string.IsNullOrEmpty(HelperText))
    {
        <div class="nqb-helper-text">@HelperText</div>
    }
</div>

<style>
    .nqb-input-container {
        display: flex;
        flex-direction: column;
        margin-bottom: 1rem;
        width: 100%;
    }

    .nqb-input-label {
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
        color: #424242;
        font-weight: 500;
    }

    .nqb-input-wrapper {
        position: relative;
        width: 100%;
    }

    .nqb-input {
        width: 100%;
        height: 2.5rem;
        padding: 0.5rem 0.75rem;
        padding-right: 2.5rem;
        font-size: 1rem;
        border: 1px solid #d0d0d0;
        border-radius: 4px;
        background-color: white;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

    .nqb-input:focus {
        outline: none;
        border-color: #1e88e5;
        box-shadow: 0 0 0 2px rgba(30, 136, 229, 0.2);
    }

    .nqb-input:hover:not(:focus):not(:disabled) {
        border-color: #9e9e9e;
    }

    .nqb-input:disabled {
        background-color: #f5f5f5;
        cursor: not-allowed;
        opacity: 0.7;
    }

    .nqb-input-adornment {
        position: absolute;
        right: 0.75rem;
        top: 50%;
        transform: translateY(-50%);
        color: #616161;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .nqb-icon {
        font-size: 1.25rem;
    }

    .nqb-helper-text {
        margin-top: 0.25rem;
        font-size: 0.75rem;
        color: #757575;
    }

    /* Styles pour le mode sombre si nécessaire */
    :root[data-theme="dark"] .nqb-input {
        background-color: #303030;
        border-color: #424242;
        color: #e0e0e0;
    }

    :root[data-theme="dark"] .nqb-input-label {
        color: #e0e0e0;
    }

    :root[data-theme="dark"] .nqb-input-adornment {
        color: #bdbdbd;
    }

    :root[data-theme="dark"] .nqb-helper-text {
        color: #bdbdbd;
    }

    /* Styles pour masquer les flèches des inputs numériques */
    .nqb-input[type="number"]::-webkit-inner-spin-button,
    .nqb-input[type="number"]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .nqb-input[type="number"] {
        -moz-appearance: textfield;
    }
</style>
@typeparam TItem

<div class="nqb-multi-select-container">
    @if (!string.IsNullOrEmpty(Label))
    {
        <label class="nqb-input-label">@Label</label>
    }
    @if (SelectedValues.Any())
    {
        <div class="nqb-multi-select-summary">
            <span class="nqb-multi-select-count">@SelectedValues.Count() élément(s) sélectionné(s)</span>
            @if (!string.IsNullOrEmpty(AdornmentIcon))
            {
                <span class="nqb-icon-left">@AdornmentIcon</span>
            }
        </div>
    }

    <div class="nqb-multi-select-wrapper">
        <div class="nqb-multi-select-options-container">
            @if (SelectAll)
            {
                <div class="nqb-multi-select-option nqb-select-all">
                    <input type="checkbox"
                           checked="@AreAllSelected()"
                           @onchange="ToggleSelectAll"
                           id="allChecked"/>
                    <label class="nqb-checkbox-container" for="allChecked">
                        @if (AreAllSelected())
                        {
                            <span class="nqb-checkbox-label">Désélectionner tout</span>
                        }
                        else
                        {
                            <span class="nqb-checkbox-label">Sélectionner tout</span>
                        }
                    </label>
                </div>
                <div class="nqb-multi-select-divider"></div>
            }

            @foreach (var item in Items)
            {
                <div class="nqb-multi-select-option">
                    <input type="checkbox"
                           checked="@IsSelected(item)"
                           @onchange="e => ToggleItem(item, e.Value != null && (bool)e.Value)"
                           id="@(ToStringFunc != null ? ToStringFunc(item) : item?.ToString())"/>
                    <label class="nqb-checkbox-container" for="@(ToStringFunc != null ? ToStringFunc(item) : item?.ToString())">
                        <span class="nqb-checkbox-label">@(ToStringFunc != null ? ToStringFunc(item) : item?.ToString())</span>
                    </label>
                </div>
            }
        </div>

    </div>
</div>

<style>
    input[type="checkbox"] {
        -webkit-appearance: checkbox !important;
        -moz-appearance: checkbox !important;
        appearance: auto !important;
        width: 1em;
        height: 1em;
        accent-color: #1e88e5; /* pour la couleur de la coche sur Chrome/Edge/Firefox */
    }

    .nqb-multi-select-container {
        position: relative;
        width: 100%;
        margin-bottom: 1rem;
    }

    .nqb-input-label {
        display: block;
        margin-bottom: 0.5rem;
        font-size: 0.875rem;
        color: #424242;
    }

    .nqb-multi-select-wrapper {
        position: relative;
    }

    .nqb-multi-select-options-container {
        display: flex;
        flex-direction: column;
        width: 100%;
        background-color: white;
        border: 1px solid #d0d0d0;
        border-radius: 4px;
        transition: border-color 0.2s, box-shadow 0.2s;
        max-height: 300px;
        overflow-y: auto;
    }

    .nqb-multi-select-options-container:hover {
        border-color: #9e9e9e;
    }

    .nqb-multi-select-options-container:focus-within {
        border-color: #1e88e5;
        box-shadow: 0 0 0 2px rgba(30, 136, 229, 0.2);
    }

    .nqb-multi-select-summary {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-top: 0.5rem;
        padding: 0.5rem;
        font-size: 0.875rem;
        color: #424242;
        background-color: #f5f5f5;
        border-radius: 4px;
    }

    .nqb-multi-select-count {
        font-size: 0.875rem;
        color: #424242;
    }

    .nqb-icon-left {
        color: #1e88e5;
    }

    .nqb-multi-select-option {
        padding: 0.5rem 0.75rem;
        display: flex;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .nqb-multi-select-option:hover {
        background-color: rgba(0, 0, 0, 0.04);
    }

    .nqb-select-all {
        font-weight: 500;
        display: flex;
    }

    .nqb-multi-select-divider {
        height: 1px;
        background-color: #e0e0e0;
        margin: 0.25rem 0;
    }

    .nqb-checkbox-container {
        display: flex;
        cursor: pointer;
        user-select: none;
        width: 100%;
    }

    .nqb-checkbox-container input[type="checkbox"] {
        appearance: auto;
        -webkit-appearance: checkbox; /* pour les navigateurs WebKit/Chrome/Safari */
        -moz-appearance: checkbox; /* pour Firefox */
        width: 1em;
        height: 1em;
        margin-right: 0.5rem;
        accent-color: #1e88e5; /* si vous voulez gérer la couleur de la coche */
    }


    .nqb-checkbox-label {
        font-size: 0.875rem;
    }

    /* Styles pour le mode sombre si nécessaire */
    :root[data-theme="dark"] .nqb-multi-select-options-container {
        background-color: #303030;
        border-color: #424242;
    }

    :root[data-theme="dark"] .nqb-multi-select-summary {
        background-color: #424242;
        color: #e0e0e0;
    }

    :root[data-theme="dark"] .nqb-input-label,
    :root[data-theme="dark"] .nqb-multi-select-count {
        color: #e0e0e0;
    }

    :root[data-theme="dark"] .nqb-multi-select-option:hover {
        background-color: rgba(255, 255, 255, 0.08);
    }

    :root[data-theme="dark"] .nqb-multi-select-divider {
        background-color: #424242;
    }

    :root[data-theme="dark"] .nqb-checkbox-label {
        color: #e0e0e0;
    }
</style>
    .nqb-pa-3 {
        padding: 1rem;
    }

    .nqb-center {
        display: flex;
        justify-content: center;
    }

    .nqb-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        font-size: 0.875rem;
        cursor: pointer;
        transition: background-color 0.2s, box-shadow 0.2s;
        border: none;
        font-weight: 500;
    }

    .nqb-button-large {
        padding: 0.625rem 1.5rem;

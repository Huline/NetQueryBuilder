        box-shadow: 0 3px 5px -1px rgba(0, 0, 0, 0.4), 0 6px 10px 0 rgba(0, 0, 0, 0.28), 0 1px 18px 0 rgba(0, 0, 0, 0.24);
    }

    :root[data-theme="dark"] .nqb-paper-outline {
        background-color: #303030;
        border-color: #424242;
    }

    :root[data-theme="dark"] .nqb-heading {
        color: #e0e0e0;
    }

    :root[data-theme="dark"] .nqb-heading-primary {
        color: #90caf9;
    }
</style>


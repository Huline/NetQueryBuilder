@using NetQueryBuilder.Blazor.Components.Conditions
@using NetQueryBuilder.Properties
@typeparam TEntity where TEntity : class

<div class="nqb-paper nqb-mb-4">
    <div class="nqb-grid">
        <div class="nqb-row nqb-full-width">
            <h3 class="nqb-heading nqb-heading-primary nqb-mb-3">SELECT</h3>
            <NetQueryBuilder.Blazor.Components.FormControls.MultiSelect TItem="SelectPropertyPath"
                                                                        Label="Select fields"
                                                                        Items="_selectedPropertyPaths"
                                                                        SelectedValues="_selectedPropertyPaths.Where(s => s.IsSelected)"
                                                                        SelectedValuesChanged="SelectedValuesChanged"
                                                                        ToStringFunc="@(prop => prop!.Property.DisplayName())"
                                                                        AdornmentIcon="✓"
                                                                        SelectAll="true"/>
        </div>

        <div class="nqb-row nqb-full-width nqb-mt-4">
            <h3 class="nqb-heading nqb-heading-primary nqb-mb-3">WHERE</h3>
            <div class="nqb-paper-outline nqb-pa-3 nqb-mb-3">
                <CascadingValue Value="@_query">
                    <ConditionComponent Condition="@_query.Condition"/>
                </CascadingValue>
            </div>
        </div>

        <div class="nqb-row nqb-full-width nqb-mt-4 nqb-center">
            <button class="nqb-button nqb-button-large nqb-button-primary" @onclick="RunQuery">
                <span class="nqb-button-icon">▶</span>
                Run Query
            </button>
        </div>
    </div>
</div>

<div class="nqb-paper">
    <h3 class="nqb-heading nqb-heading-primary nqb-mb-3">RÉSULTATS</h3>
    <QueryResultTable @ref="_queryResult" TEntity="TEntity" Properties="_selectedPropertyPaths" TotalItems="_totalItems"/>
</div>

<style>
    .nqb-paper {
        background-color: white;
        border-radius: 4px;

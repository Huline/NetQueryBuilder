@model NetQueryBuilder.AspNetCore.ViewComponents.PaginationViewModel

<div class="nqb-pagination">
    <form method="post" class="nqb-pagination-nav">
        <button type="submit"
                formaction="?handler=ChangePage&page=@(Model.CurrentPage - 1)"
                disabled="@(!Model.HasPreviousPage)"
                class="nqb-button nqb-button-outlined nqb-button-small nqb-pagination-btn"
                aria-label="Go to previous page">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
            <span class="nqb-pagination-btn-text">Previous</span>
        </button>
    </form>

    <div class="nqb-pagination-info">
        <span class="nqb-pagination-current">Page @Model.CurrentPage</span>
        <span class="nqb-pagination-separator">of</span>
        <span class="nqb-pagination-total">@Model.TotalPages</span>
        <span class="nqb-pagination-items">(@Model.TotalItems total)</span>
    </div>

    <form method="post" class="nqb-pagination-nav">
        <button type="submit"
                formaction="?handler=ChangePage&page=@(Model.CurrentPage + 1)"
                disabled="@(!Model.HasNextPage)"
                class="nqb-button nqb-button-outlined nqb-button-small nqb-pagination-btn"
                aria-label="Go to next page">
            <span class="nqb-pagination-btn-text">Next</span>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
        </button>
    </form>
</div>

<style>
    .nqb-pagination {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.5rem;
        background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
        border-radius: 0 0 12px 12px;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .nqb-pagination-nav {
        display: inline;
    }

    .nqb-pagination-btn {
        display: inline-flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.5rem 1rem;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .nqb-pagination-btn:not(:disabled):hover {
        background: rgba(102, 126, 234, 0.1);
        border-color: #667eea;
        color: #667eea;
        transform: translateX(0);
    }

    .nqb-pagination-btn:disabled {
        opacity: 0.4;
        cursor: not-allowed;
    }

    .nqb-pagination-btn svg {
        flex-shrink: 0;
    }

    .nqb-pagination-info {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: #64748b;
    }

    .nqb-pagination-current {
        font-weight: 600;
        color: #667eea;
        background: rgba(102, 126, 234, 0.1);
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
    }

    .nqb-pagination-separator {
        color: #94a3b8;
    }

    .nqb-pagination-total {
        font-weight: 500;
        color: #1e293b;
    }

    .nqb-pagination-items {
        color: #94a3b8;
        font-size: 0.8125rem;
    }

    @@media (max-width: 480px) {
        .nqb-pagination {
            flex-direction: column;
            gap: 0.75rem;
        }

        .nqb-pagination-btn-text {
            display: none;
        }

        .nqb-pagination-btn {
            padding: 0.5rem;
        }
    }
</style>

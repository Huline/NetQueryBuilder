@page "/"
@page "/home"
@using NetQueryBuilder.Blazor.Components

<!-- Page Header -->
<div class="nqb-page-hero">
    <div class="nqb-hero-content">
        <div class="nqb-hero-badge">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" fill="currentColor"/>
            </svg>
            <span>Demo Application</span>
        </div>
        <h1 class="nqb-hero-title">NetQueryBuilder Showcase</h1>
        <p class="nqb-hero-description">
            Experience the power of visual query building with our comprehensive demo. 
            Build complex queries using an intuitive interface, execute them against sample data, 
            and see results in real-time.
        </p>
        
        <div class="nqb-hero-stats">
            <div class="nqb-stat">
                <div class="nqb-stat-number">5+</div>
                <div class="nqb-stat-label">Entity Types</div>
            </div>
            <div class="nqb-stat">
                <div class="nqb-stat-number">20+</div>
                <div class="nqb-stat-label">Query Operators</div>
            </div>
            <div class="nqb-stat">
                <div class="nqb-stat-number">∞</div>
                <div class="nqb-stat-label">Possibilities</div>
            </div>
        </div>
    </div>
</div>

<!-- Feature Cards -->
<div class="nqb-features-section">
    <div class="nqb-features-container">
        <div class="nqb-feature-card">
            <div class="nqb-feature-icon nqb-feature-icon-visual">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z" fill="currentColor"/>
                </svg>
            </div>
            <h3>Visual Query Builder</h3>
            <p>Build queries using drag-and-drop interface with real-time preview of generated expressions.</p>
        </div>
        
        <div class="nqb-feature-card">
            <div class="nqb-feature-icon nqb-feature-icon-fast">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M13 2.05v3.03c3.39.49 6 3.39 6 6.92 0 .9-.18 1.75-.48 2.54l2.6 1.53c.56-1.24.88-2.62.88-4.07 0-5.18-3.95-9.45-9-9.95zM12 19c-3.87 0-7-3.13-7-7 0-3.53 2.61-6.43 6-6.92V2.05c-5.06.5-9 4.76-9 9.95 0 5.52 4.47 10 9.99 10 3.31 0 6.24-1.61 8.06-4.09l-2.6-1.53C16.17 17.98 14.21 19 12 19z" fill="currentColor"/>
                </svg>
            </div>
            <h3>High Performance</h3>
            <p>Optimized for speed with efficient query execution and responsive user interface.</p>
        </div>
        
        <div class="nqb-feature-card">
            <div class="nqb-feature-icon nqb-feature-icon-flexible">
                <svg width="32" height="32" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z" fill="currentColor"/>
                </svg>
            </div>
            <h3>Highly Customizable</h3>
            <p>Extensible architecture supports custom operators, themes, and integration patterns.</p>
        </div>
    </div>
</div>

<!-- Query Builder Section -->
<div class="nqb-main-section">
    <QueryBuilderContainer></QueryBuilderContainer>
</div>